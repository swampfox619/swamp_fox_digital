<div class="container">
    <main>
        <section class="blog-new">
            <h2>New Blog Post</h2>
                <div class="blog-content">
                    <%= form_for @blog do |f| %>
                    <div class="row blog-new-title">
                        <div class="col-sm-2">
                            <%= f.label :title %>    
                        </div>
                        <div class="col-sm-10">
                            <%= f.text_field :title, size: "40" %>    
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-2">
                            <%= f.label :body %>
                        </div>
                        <div class="col-sm-10">
                            <%= f.text_area :body, size: "60x20" %>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                        </div>
                        <div class="col-sm-6">
                            <%= f.submit "Save", class: 'btn btn-success' %>
                        </div>
                    </div>
                    <% end %>
                </div>
        </section>
    </main>
</div> 
